<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- Primary Palette -->
    <Color x:Key="PrimaryBlueColor">#FF3B82F6</Color>
    <Color x:Key="PrimaryBlueLightColor">#FF60A5FA</Color>
    <Color x:Key="PrimaryBlueDarkColor">#FF2563EB</Color>

    <!-- Neutral/Grayscale Palette -->
    <Color x:Key="BackgroundColor">#FFF1F5F9</Color>
    <Color x:Key="ForegroundColor">#FF334155</Color>
    <Color x:Key="BorderColor">#FFCBD5E1</Color>
    <Color x:Key="MutedForegroundColor">#FF64748B</Color>
    <Color x:Key="DisabledColor">#FF94A3B8</Color>
    <Color x:Key="WhiteColor">#FFFFFFFF</Color>
    <Color x:Key="BlackColor">#FF000000</Color>

    <!-- Accent/Status Colors -->
    <Color x:Key="SuccessColor">#FF22C55E</Color>
    <Color x:Key="WarningColor">#FFFBBF24</Color>
    <Color x:Key="ErrorColor">#FFEF4444</Color>
    <Color x:Key="InfoColor">#FF0EA5E9</Color>

    <!-- Brushes -->
    <SolidColorBrush x:Key="PrimaryBlueBrush" Color="{StaticResource PrimaryBlueColor}"/>
    <SolidColorBrush x:Key="PrimaryBlueLightBrush" Color="{StaticResource PrimaryBlueLightColor}"/>
    <SolidColorBrush x:Key="PrimaryBlueDarkBrush" Color="{StaticResource PrimaryBlueDarkColor}"/>
    
    <SolidColorBrush x:Key="BackgroundBrush" Color="{StaticResource BackgroundColor}"/>
    <SolidColorBrush x:Key="ForegroundBrush" Color="{StaticResource ForegroundColor}"/>
    <SolidColorBrush x:Key="BorderBrush" Color="{StaticResource BorderColor}"/>
    <SolidColorBrush x:Key="MutedForegroundBrush" Color="{StaticResource MutedForegroundColor}"/>
    <SolidColorBrush x:Key="DisabledBrush" Color="{StaticResource DisabledColor}"/>
    <SolidColorBrush x:Key="WhiteBrush" Color="{StaticResource WhiteColor}"/>
    <SolidColorBrush x:Key="BlackBrush" Color="{StaticResource BlackColor}"/>

    <SolidColorBrush x:Key="SuccessBrush" Color="{StaticResource SuccessColor}"/>
    <SolidColorBrush x:Key="WarningBrush" Color="{StaticResource WarningColor}"/>
    <SolidColorBrush x:Key="ErrorBrush" Color="{StaticResource ErrorColor}"/>
    <SolidColorBrush x:Key="InfoBrush" Color="{StaticResource InfoColor}"/>

</ResourceDictionary>