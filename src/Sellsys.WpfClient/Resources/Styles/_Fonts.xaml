<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:system="clr-namespace:System;assembly=mscorlib">

    <!-- Default Font Family -->
    <FontFamily x:Key="DefaultFontFamily">Segoe UI</FontFamily>

    <!-- Font Sizes -->
    <system:Double x:Key="FontSize-XSmall">10.0</system:Double>
    <system:Double x:Key="FontSize-Small">12.0</system:Double>
    <system:Double x:Key="FontSize-Regular">14.0</system:Double>
    <system:Double x:Key="FontSize-Large">16.0</system:Double>
    <system:Double x:Key="FontSize-XLarge">18.0</system:Double>
    <system:Double x:Key="FontSize-XXLarge">24.0</system:Double>

</ResourceDictionary>