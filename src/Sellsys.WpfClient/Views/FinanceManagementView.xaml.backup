<UserControl x:Class="Sellsys.WpfClient.Views.FinanceManagementView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:Sellsys.WpfClient.Views"
             mc:Ignorable="d"
             d:DesignHeight="800" d:DesignWidth="1600">

    <!-- 定义资源 -->
    <UserControl.Resources>
        <!-- 转换器 -->
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>

        <!-- 蓝色主题样式 -->
        <SolidColorBrush x:Key="PrimaryBlueBrush" Color="#409EFF"/>
        <SolidColorBrush x:Key="LightBlueBrush" Color="#ECF5FF"/>
        <SolidColorBrush x:Key="BorderBrush" Color="#DCDFE6"/>
        <SolidColorBrush x:Key="TextBrush" Color="#303133"/>
        <SolidColorBrush x:Key="SecondaryTextBrush" Color="#606266"/>
        <SolidColorBrush x:Key="TableHeaderBrush" Color="#F5F7FA"/>
        <SolidColorBrush x:Key="TableRowEvenBrush" Color="#FAFAFA"/>

        <!-- 按钮样式 -->
        <Style x:Key="BlueButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="{StaticResource PrimaryBlueBrush}"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="16,8"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="4"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center"
                                            VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#66B1FF"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#3A8EE6"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- 灰色按钮样式 -->
        <Style x:Key="GrayButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#909399"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="16,8"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="4"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center"
                                            VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#A6A9AD"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#82848A"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- 下拉框样式 -->
        <Style x:Key="FilterComboBoxStyle" TargetType="ComboBox">
            <Setter Property="Height" Value="32"/>
            <Setter Property="Padding" Value="8,4"/>
            <Setter Property="BorderBrush" Value="{StaticResource BorderBrush}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="FontSize" Value="14"/>
        </Style>

        <!-- 日期选择器样式 -->
        <Style x:Key="FilterDatePickerStyle" TargetType="DatePicker">
            <Setter Property="Height" Value="32"/>
            <Setter Property="BorderBrush" Value="{StaticResource BorderBrush}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="FontSize" Value="14"/>
        </Style>
    </UserControl.Resources>

    <Grid Background="White">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/> <!-- 筛选区域 -->
            <RowDefinition Height="*"/>    <!-- 数据表格 -->
            <RowDefinition Height="Auto"/> <!-- 底部合计行 -->
        </Grid.RowDefinitions>

        <!-- 筛选区域 -->
        <Border Grid.Row="0"
                Background="{StaticResource LightBlueBrush}"
                BorderBrush="{StaticResource BorderBrush}"
                BorderThickness="0,0,0,1"
                Padding="20,15">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="15"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- 第一行筛选条件 -->
                <Grid Grid.Row="0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="150"/>
                        <ColumnDefinition Width="20"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="150"/>
                        <ColumnDefinition Width="20"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="150"/>
                        <ColumnDefinition Width="20"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="150"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- 客户名称 -->
                    <TextBlock Grid.Column="0"
                               Text="客户名称:"
                               VerticalAlignment="Center"
                               Foreground="{StaticResource TextBrush}"
                               FontSize="14"/>
                    <ComboBox Grid.Column="1"
                              ItemsSource="{Binding FilterOptions.Customers}"
                              SelectedItem="{Binding SelectedCustomer}"
                              DisplayMemberPath="Text"
                              Style="{StaticResource FilterComboBoxStyle}">
                        <ComboBox.ItemTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding Text}" FontSize="14"/>
                            </DataTemplate>
                        </ComboBox.ItemTemplate>
                    </ComboBox>

                    <!-- 产品名称 -->
                    <TextBlock Grid.Column="3"
                               Text="产品名称:"
                               VerticalAlignment="Center"
                               Foreground="{StaticResource TextBrush}"
                               FontSize="14"/>
                    <ComboBox Grid.Column="4"
                              ItemsSource="{Binding FilterOptions.Products}"
                              SelectedItem="{Binding SelectedProduct}"
                              DisplayMemberPath="Text"
                              Style="{StaticResource FilterComboBoxStyle}">
                        <ComboBox.ItemTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding Text}" FontSize="14"/>
                            </DataTemplate>
                        </ComboBox.ItemTemplate>
                    </ComboBox>

                    <!-- 生效日期 -->
                    <TextBlock Grid.Column="6"
                               Text="生效日期:"
                               VerticalAlignment="Center"
                               Foreground="{StaticResource TextBrush}"
                               FontSize="14"/>
                    <DatePicker Grid.Column="7"
                                SelectedDate="{Binding EffectiveDateStart}"
                                Style="{StaticResource FilterDatePickerStyle}"/>

                    <!-- 到期日期 -->
                    <TextBlock Grid.Column="9"
                               Text="到期日期:"
                               VerticalAlignment="Center"
                               Foreground="{StaticResource TextBrush}"
                               FontSize="14"/>
                    <DatePicker Grid.Column="10"
                                SelectedDate="{Binding ExpiryDateStart}"
                                Style="{StaticResource FilterDatePickerStyle}"/>
                </Grid>

                <!-- 第二行筛选条件 -->
                <Grid Grid.Row="2">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="150"/>
                        <ColumnDefinition Width="20"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="150"/>
                        <ColumnDefinition Width="40"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="80"/>
                        <ColumnDefinition Width="20"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="80"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- 支付日期 -->
                    <TextBlock Grid.Column="0"
                               Text="支付日期:"
                               VerticalAlignment="Center"
                               Foreground="{StaticResource TextBrush}"
                               FontSize="14"/>
                    <DatePicker Grid.Column="1"
                                SelectedDate="{Binding PaymentDateStart}"
                                Style="{StaticResource FilterDatePickerStyle}"/>

                    <!-- 负责人 -->
                    <TextBlock Grid.Column="3"
                               Text="负责人:"
                               VerticalAlignment="Center"
                               Foreground="{StaticResource TextBrush}"
                               FontSize="14"/>
                    <ComboBox Grid.Column="4"
                              ItemsSource="{Binding FilterOptions.SalesPersons}"
                              SelectedItem="{Binding SelectedSalesPerson}"
                              DisplayMemberPath="Text"
                              Style="{StaticResource FilterComboBoxStyle}">
                        <ComboBox.ItemTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding Text}" FontSize="14"/>
                            </DataTemplate>
                        </ComboBox.ItemTemplate>
                    </ComboBox>

                    <!-- 查询按钮 -->
                    <Button Grid.Column="6"
                            Content="查询"
                            Command="{Binding SearchCommand}"
                            Style="{StaticResource BlueButtonStyle}"
                            Width="80"
                            Height="32"/>

                    <!-- 重置按钮 -->
                    <Button Grid.Column="9"
                            Content="重置"
                            Command="{Binding ResetFiltersCommand}"
                            Style="{StaticResource GrayButtonStyle}"
                            Width="80"
                            Height="32"/>
                </Grid>
            </Grid>
        </Border>

        <!-- 数据表格区域 -->
        <Border Grid.Row="1"
                BorderBrush="{StaticResource BorderBrush}"
                BorderThickness="1"
                Background="White">
            <Grid>
                <!-- 加载指示器 -->
                <Grid Visibility="{Binding IsLoading, Converter={StaticResource BooleanToVisibilityConverter}}"
                      Background="#80FFFFFF">
                    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                        <ProgressBar IsIndeterminate="True" Width="200" Height="20" Margin="0,0,0,10"/>
                        <TextBlock Text="正在加载..."
                                   FontSize="14"
                                   Foreground="{StaticResource TextBrush}"
                                   HorizontalAlignment="Center"/>
                    </StackPanel>
                </Grid>

                <!-- 财务订单明细表格 -->
                <DataGrid x:Name="FinanceOrderDetailsDataGrid"
                          ItemsSource="{Binding FinanceOrderDetails}"
                          SelectedItem="{Binding SelectedOrderDetail}"
                          AutoGenerateColumns="False"
                          CanUserAddRows="False"
                          CanUserDeleteRows="False"
                          CanUserReorderColumns="False"
                          CanUserResizeRows="False"
                          CanUserSortColumns="True"
                          GridLinesVisibility="Horizontal"
                          HeadersVisibility="Column"
                          SelectionMode="Single"
                          AlternatingRowBackground="{StaticResource TableRowEvenBrush}"
                          Background="White"
                          BorderThickness="0"
                          RowHeight="40"
                          FontSize="14">

                    <!-- 列头样式 -->
                    <DataGrid.ColumnHeaderStyle>
                        <Style TargetType="DataGridColumnHeader">
                            <Setter Property="Background" Value="{StaticResource TableHeaderBrush}"/>
                            <Setter Property="Foreground" Value="{StaticResource TextBrush}"/>
                            <Setter Property="BorderBrush" Value="{StaticResource BorderBrush}"/>
                            <Setter Property="BorderThickness" Value="0,0,1,1"/>
                            <Setter Property="Padding" Value="12,8"/>
                            <Setter Property="FontWeight" Value="Bold"/>
                            <Setter Property="FontSize" Value="14"/>
                            <Setter Property="HorizontalContentAlignment" Value="Center"/>
                            <Setter Property="VerticalContentAlignment" Value="Center"/>
                        </Style>
                    </DataGrid.ColumnHeaderStyle>

                    <!-- 行样式 -->
                    <DataGrid.RowStyle>
                        <Style TargetType="DataGridRow">
                            <Setter Property="Background" Value="White"/>
                            <Setter Property="BorderBrush" Value="{StaticResource BorderBrush}"/>
                            <Setter Property="BorderThickness" Value="0,0,0,1"/>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="{StaticResource LightBlueBrush}"/>
                                </Trigger>
                                <Trigger Property="IsSelected" Value="True">
                                    <Setter Property="Background" Value="{StaticResource PrimaryBlueBrush}"/>
                                    <Setter Property="Foreground" Value="White"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </DataGrid.RowStyle>

                    <!-- 单元格样式 -->
                    <DataGrid.CellStyle>
                        <Style TargetType="DataGridCell">
                            <Setter Property="BorderThickness" Value="0,0,1,0"/>
                            <Setter Property="BorderBrush" Value="{StaticResource BorderBrush}"/>
                            <Setter Property="Padding" Value="12,8"/>
                            <Setter Property="VerticalAlignment" Value="Center"/>
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="DataGridCell">
                                        <Border Background="{TemplateBinding Background}"
                                                BorderBrush="{TemplateBinding BorderBrush}"
                                                BorderThickness="{TemplateBinding BorderThickness}"
                                                Padding="{TemplateBinding Padding}">
                                            <ContentPresenter VerticalAlignment="{TemplateBinding VerticalAlignment}"/>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                            <Style.Triggers>
                                <Trigger Property="IsSelected" Value="True">
                                    <Setter Property="Background" Value="Transparent"/>
                                    <Setter Property="Foreground" Value="White"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </DataGrid.CellStyle>

                    <DataGrid.Columns>
                        <!-- 序号 -->
                        <DataGridTextColumn Header="序号"
                                            Binding="{Binding RowNumber}"
                                            Width="60"
                                            IsReadOnly="True">
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Setter Property="HorizontalAlignment" Value="Center"/>
                                    <Setter Property="VerticalAlignment" Value="Center"/>
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>

                        <!-- 客户名称 -->
                        <DataGridTextColumn Header="客户名称"
                                            Binding="{Binding CustomerName}"
                                            Width="150"
                                            IsReadOnly="True">
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Setter Property="HorizontalAlignment" Value="Left"/>
                                    <Setter Property="VerticalAlignment" Value="Center"/>
                                    <Setter Property="TextTrimming" Value="CharacterEllipsis"/>
                                    <Setter Property="ToolTip" Value="{Binding CustomerName}"/>
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>

                        <!-- 产品名称 -->
                        <DataGridTextColumn Header="产品名称"
                                            Binding="{Binding ProductFullName}"
                                            Width="180"
                                            IsReadOnly="True">
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Setter Property="HorizontalAlignment" Value="Left"/>
                                    <Setter Property="VerticalAlignment" Value="Center"/>
                                    <Setter Property="TextTrimming" Value="CharacterEllipsis"/>
                                    <Setter Property="ToolTip" Value="{Binding ProductFullName}"/>
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>

                        <!-- 数量 -->
                        <DataGridTextColumn Header="数量"
                                            Binding="{Binding Quantity}"
                                            Width="80"
                                            IsReadOnly="True">
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Setter Property="HorizontalAlignment" Value="Right"/>
                                    <Setter Property="VerticalAlignment" Value="Center"/>
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>

                        <!-- 单价 -->
                        <DataGridTextColumn Header="单价"
                                            Binding="{Binding FormattedUnitPrice}"
                                            Width="100"
                                            IsReadOnly="True">
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Setter Property="HorizontalAlignment" Value="Right"/>
                                    <Setter Property="VerticalAlignment" Value="Center"/>
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>

                        <!-- 总金额 -->
                        <DataGridTextColumn Header="总金额"
                                            Binding="{Binding FormattedTotalAmount}"
                                            Width="120"
                                            IsReadOnly="True">
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Setter Property="HorizontalAlignment" Value="Right"/>
                                    <Setter Property="VerticalAlignment" Value="Center"/>
                                    <Setter Property="FontWeight" Value="Bold"/>
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>

                        <!-- 已收金额 -->
                        <DataGridTextColumn Header="已收金额"
                                            Binding="{Binding FormattedReceivedAmount}"
                                            Width="120"
                                            IsReadOnly="True">
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Setter Property="HorizontalAlignment" Value="Right"/>
                                    <Setter Property="VerticalAlignment" Value="Center"/>
                                    <Setter Property="Foreground" Value="#67C23A"/>
                                    <Setter Property="FontWeight" Value="Bold"/>
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>

                        <!-- 未收金额 -->
                        <DataGridTextColumn Header="未收金额"
                                            Binding="{Binding FormattedUnreceivedAmount}"
                                            Width="120"
                                            IsReadOnly="True">
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Setter Property="HorizontalAlignment" Value="Right"/>
                                    <Setter Property="VerticalAlignment" Value="Center"/>
                                    <Setter Property="Foreground" Value="#E6A23C"/>
                                    <Setter Property="FontWeight" Value="Bold"/>
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>

                        <!-- 收款比例 -->
                        <DataGridTextColumn Header="收款比例"
                                            Binding="{Binding FormattedPaymentRatio}"
                                            Width="100"
                                            IsReadOnly="True">
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Setter Property="HorizontalAlignment" Value="Center"/>
                                    <Setter Property="VerticalAlignment" Value="Center"/>
                                    <Setter Property="FontWeight" Value="Bold"/>
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>

                        <!-- 收款日期 -->
                        <DataGridTextColumn Header="收款日期"
                                            Binding="{Binding FormattedPaymentReceivedDate}"
                                            Width="120"
                                            IsReadOnly="True">
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Setter Property="HorizontalAlignment" Value="Center"/>
                                    <Setter Property="VerticalAlignment" Value="Center"/>
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>

                        <!-- 负责人 -->
                        <DataGridTextColumn Header="负责人"
                                            Binding="{Binding SalesPersonName}"
                                            Width="100"
                                            IsReadOnly="True">
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Setter Property="HorizontalAlignment" Value="Center"/>
                                    <Setter Property="VerticalAlignment" Value="Center"/>
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>

                        <!-- 到期日期 -->
                        <DataGridTextColumn Header="到期日期"
                                            Binding="{Binding FormattedExpiryDate}"
                                            Width="120"
                                            IsReadOnly="True">
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Setter Property="HorizontalAlignment" Value="Center"/>
                                    <Setter Property="VerticalAlignment" Value="Center"/>
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>

                        <!-- 操作 -->
                        <DataGridTemplateColumn Header="操作" Width="100">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                        <Button Content="编辑"
                                                Command="{Binding DataContext.EditPaymentCommand, RelativeSource={RelativeSource AncestorType=DataGrid}}"
                                                CommandParameter="{Binding}"
                                                Style="{StaticResource BlueButtonStyle}"
                                                Width="60"
                                                Height="28"
                                                FontSize="12"
                                                Margin="2"
                                                IsEnabled="{Binding CanEditPayment}"/>
                                    </StackPanel>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                    </DataGrid.Columns>
                </DataGrid>
            </Grid>
        </Border>

        <!-- 底部合计行 -->
        <Border Grid.Row="2"
                Background="{StaticResource TableHeaderBrush}"
                BorderBrush="{StaticResource BorderBrush}"
                BorderThickness="1,0,1,1"
                Padding="0">
            <Grid Height="50">
                <Grid.ColumnDefinitions>
                    <!-- 对应表格列的宽度 -->
                    <ColumnDefinition Width="60"/>   <!-- 序号 -->
                    <ColumnDefinition Width="150"/>  <!-- 客户名称 -->
                    <ColumnDefinition Width="180"/>  <!-- 产品名称 -->
                    <ColumnDefinition Width="80"/>   <!-- 数量 -->
                    <ColumnDefinition Width="100"/>  <!-- 单价 -->
                    <ColumnDefinition Width="120"/>  <!-- 总金额 -->
                    <ColumnDefinition Width="120"/>  <!-- 已收金额 -->
                    <ColumnDefinition Width="120"/>  <!-- 未收金额 -->
                    <ColumnDefinition Width="100"/>  <!-- 收款比例 -->
                    <ColumnDefinition Width="120"/>  <!-- 收款日期 -->
                    <ColumnDefinition Width="100"/>  <!-- 负责人 -->
                    <ColumnDefinition Width="120"/>  <!-- 到期日期 -->
                    <ColumnDefinition Width="100"/>  <!-- 操作 -->
                </Grid.ColumnDefinitions>

                <!-- 合计标签 -->
                <Border Grid.Column="0" Grid.ColumnSpan="5"
                        BorderBrush="{StaticResource BorderBrush}"
                        BorderThickness="0,0,1,0">
                    <TextBlock Text="合计"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center"
                               FontWeight="Bold"
                               FontSize="16"
                               Foreground="{StaticResource TextBrush}"/>
                </Border>

                <!-- 总金额合计 -->
                <Border Grid.Column="5"
                        BorderBrush="{StaticResource BorderBrush}"
                        BorderThickness="0,0,1,0">
                    <TextBlock Text="{Binding Summary.FormattedTotalAmount}"
                               HorizontalAlignment="Right"
                               VerticalAlignment="Center"
                               FontWeight="Bold"
                               FontSize="14"
                               Foreground="{StaticResource TextBrush}"
                               Margin="12,0"/>
                </Border>

                <!-- 已收金额合计 -->
                <Border Grid.Column="6"
                        BorderBrush="{StaticResource BorderBrush}"
                        BorderThickness="0,0,1,0">
                    <TextBlock Text="{Binding Summary.FormattedTotalReceivedAmount}"
                               HorizontalAlignment="Right"
                               VerticalAlignment="Center"
                               FontWeight="Bold"
                               FontSize="14"
                               Foreground="#67C23A"
                               Margin="12,0"/>
                </Border>

                <!-- 未收金额合计 -->
                <Border Grid.Column="7"
                        BorderBrush="{StaticResource BorderBrush}"
                        BorderThickness="0,0,1,0">
                    <TextBlock Text="{Binding Summary.FormattedTotalUnreceivedAmount}"
                               HorizontalAlignment="Right"
                               VerticalAlignment="Center"
                               FontWeight="Bold"
                               FontSize="14"
                               Foreground="#E6A23C"
                               Margin="12,0"/>
                </Border>

                <!-- 收款比例合计 -->
                <Border Grid.Column="8"
                        BorderBrush="{StaticResource BorderBrush}"
                        BorderThickness="0,0,1,0">
                    <TextBlock Text="{Binding Summary.FormattedTotalPaymentRatio}"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center"
                               FontWeight="Bold"
                               FontSize="14"
                               Foreground="{StaticResource TextBrush}"
                               Margin="12,0"/>
                </Border>

                <!-- 其他列留空 -->
                <Border Grid.Column="9"
                        BorderBrush="{StaticResource BorderBrush}"
                        BorderThickness="0,0,1,0"/>
                <Border Grid.Column="10"
                        BorderBrush="{StaticResource BorderBrush}"
                        BorderThickness="0,0,1,0"/>
                <Border Grid.Column="11"
                        BorderBrush="{StaticResource BorderBrush}"
                        BorderThickness="0,0,1,0"/>
                <Border Grid.Column="12"/>
            </Grid>
        </Border>
    </Grid>
</UserControl>

