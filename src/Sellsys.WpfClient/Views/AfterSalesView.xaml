<UserControl x:Class="Sellsys.WpfClient.Views.AfterSalesView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:Sellsys.WpfClient.Views"
             mc:Ignorable="d"
             d:DesignHeight="600" d:DesignWidth="1200">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/> <!-- Search Filters -->
            <RowDefinition Height="*"/>    <!-- Data Grid -->
        </Grid.RowDefinitions>

        <!-- Search Filters Section -->
        <Border Grid.Row="0"
                Background="{StaticResource TableHeaderBrush}"
                Padding="15,10"
                Margin="0,0,0,15">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- 客户单位名称 -->
                <TextBlock Grid.Column="0" Text="客户单位名称:" VerticalAlignment="Center" Margin="0,0,10,0"/>
                <ComboBox Grid.Column="1"
                         ItemsSource="{Binding CustomerNameOptions}"
                         SelectedValue="{Binding SelectedCustomerName}"
                         Width="150"
                         Margin="0,0,20,0"
                         IsEditable="True"/>

                <!-- 省市 -->
                <TextBlock Grid.Column="2" Text="省市:" VerticalAlignment="Center" Margin="0,0,10,0"/>
                <ComboBox Grid.Column="3"
                         ItemsSource="{Binding Provinces}"
                         SelectedValue="{Binding SelectedProvince}"
                         Width="100"
                         Margin="0,0,10,0"/>
                <ComboBox Grid.Column="4"
                         ItemsSource="{Binding Cities}"
                         SelectedValue="{Binding SelectedCity}"
                         Width="100"
                         Margin="0,0,20,0"/>

                <!-- 处理状态 -->
                <TextBlock Grid.Column="5" Text="处理状态:" VerticalAlignment="Center" Margin="0,0,10,0"/>
                <ComboBox Grid.Column="6"
                         ItemsSource="{Binding StatusOptions}"
                         SelectedValue="{Binding SelectedStatus}"
                         Width="100"
                         Margin="0,0,20,0"/>

                <!-- 查询和重置按钮 -->
                <StackPanel Grid.Column="7" Orientation="Horizontal">
                    <Button Content="查询"
                            Command="{Binding SearchCommand}"
                            Style="{StaticResource PrimaryButtonStyle}"
                            Width="60"
                            Height="32"
                            Margin="0,0,10,0"/>
                    <Button Content="重置"
                            Command="{Binding ResetFiltersCommand}"
                            Style="{StaticResource DeleteButtonStyle}"
                            Width="60"
                            Height="32"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Data Grid -->
        <Border Grid.Row="1"
                BorderBrush="{StaticResource BorderBrush}"
                BorderThickness="1"
                Background="White">
            <Grid>
                <!-- Loading Indicator -->
                <Grid Visibility="{Binding IsLoading, Converter={StaticResource BooleanToVisibilityConverter}}">
                    <Grid.Background>
                        <SolidColorBrush Color="White" Opacity="0.7"/>
                    </Grid.Background>
                    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                        <ProgressBar IsIndeterminate="True" Width="200" Height="20" Margin="0,0,0,10"/>
                        <TextBlock Text="正在加载..."
                                   Style="{StaticResource GlobalTextStyle}"
                                   HorizontalAlignment="Center"/>
                    </StackPanel>
                </Grid>

                <!-- After Sales Records Data Grid -->
                <DataGrid x:Name="AfterSalesRecordsDataGrid"
                          ItemsSource="{Binding AfterSalesRecords}"
                          SelectedItem="{Binding SelectedRecord}"
                          Style="{StaticResource StandardDataGridStyle}"
                          ColumnHeaderStyle="{StaticResource DataGridColumnHeaderStyle}"
                          RowStyle="{StaticResource DataGridRowStyle}"
                          AutoGenerateColumns="False">
                    <DataGrid.Columns>
                        <!-- 序号 -->
                        <DataGridTextColumn Header="序号"
                                            Width="60"
                                            IsReadOnly="True">
                            <DataGridTextColumn.Binding>
                                <Binding RelativeSource="{RelativeSource AncestorType=DataGridRow}"
                                         Converter="{StaticResource RowIndexConverter}"/>
                            </DataGridTextColumn.Binding>
                        </DataGridTextColumn>

                        <!-- 客户 -->
                        <DataGridTextColumn Header="客户"
                                            Binding="{Binding CustomerName}"
                                            Width="120"
                                            IsReadOnly="True"/>

                        <!-- 城市 -->
                        <DataGridTextColumn Header="城市"
                                            Binding="{Binding CustomerCity}"
                                            Width="80"
                                            IsReadOnly="True"/>

                        <!-- 客户反馈 -->
                        <DataGridTextColumn Header="客户反馈"
                                            Binding="{Binding CustomerFeedback}"
                                            Width="200"
                                            IsReadOnly="True">
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Setter Property="TextTrimming" Value="CharacterEllipsis"/>
                                    <Setter Property="ToolTip" Value="{Binding CustomerFeedback}"/>
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>

                        <!-- 客户反馈名称 (联系人) -->
                        <DataGridHyperlinkColumn Header="联系人"
                                                 Width="80"
                                                 IsReadOnly="True">
                            <DataGridHyperlinkColumn.Binding>
                                <Binding Path="ContactName"/>
                            </DataGridHyperlinkColumn.Binding>
                            <DataGridHyperlinkColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Setter Property="Foreground" Value="Blue"/>
                                    <Setter Property="TextDecorations" Value="Underline"/>
                                </Style>
                            </DataGridHyperlinkColumn.ElementStyle>
                        </DataGridHyperlinkColumn>

                        <!-- 联系电话 -->
                        <DataGridTextColumn Header="联系电话"
                                            Binding="{Binding ContactPhone}"
                                            Width="120"
                                            IsReadOnly="True"/>

                        <!-- 处理状态 -->
                        <DataGridTextColumn Header="处理状态"
                                            Binding="{Binding Status}"
                                            Width="80"
                                            IsReadOnly="True"/>

                        <!-- 处理时间 -->
                        <DataGridTextColumn Header="处理时间"
                                            Binding="{Binding ProcessedDate, StringFormat=yyyy-MM-dd HH:mm:ss}"
                                            Width="140"
                                            IsReadOnly="True"/>

                        <!-- 操作 -->
                        <DataGridTemplateColumn Header="操作" Width="100" IsReadOnly="True">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <Button Content="查看记录"
                                            Command="{Binding DataContext.ViewRecordsRowCommand, RelativeSource={RelativeSource AncestorType=DataGrid}}"
                                            CommandParameter="{Binding}"
                                            Style="{StaticResource PrimaryButtonStyle}"
                                            Width="80"
                                            Height="25"
                                            FontSize="12"/>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                    </DataGrid.Columns>
                </DataGrid>
            </Grid>
        </Border>
    </Grid>
</UserControl>
