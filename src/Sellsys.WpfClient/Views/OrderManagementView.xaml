<UserControl x:Class="Sellsys.WpfClient.Views.OrderManagementView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:Sellsys.WpfClient.Views"
             mc:Ignorable="d"
             d:DesignHeight="700" d:DesignWidth="1400">
    <StackPanel Margin="20">
        <!-- Title Section -->
        <TextBlock Text="订单管理"
                   Style="{StaticResource ModuleTitleStyle}"
                   Margin="0,0,0,20"/>

        <!-- Test Content -->
        <TextBlock Text="订单管理模块已成功加载！"
                   FontSize="16"
                   Foreground="Green"
                   Margin="0,0,0,20"/>

        <!-- Simple Filter Section -->
        <Border Background="#F8F9FA"
                BorderBrush="{StaticResource BorderBrush}"
                BorderThickness="1"
                CornerRadius="4"
                Padding="15"
                Margin="0,0,0,20">
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="客户名称:" VerticalAlignment="Center" Margin="0,0,10,0"/>
                <TextBox Text="{Binding SearchCustomerName, UpdateSourceTrigger=PropertyChanged}"
                         Width="150"
                         Height="32"
                         Margin="0,0,15,0"/>

                <TextBlock Text="订单状态:" VerticalAlignment="Center" Margin="0,0,10,0"/>
                <ComboBox ItemsSource="{Binding StatusOptions}"
                          SelectedItem="{Binding SelectedStatus}"
                          Width="120"
                          Height="32"
                          Margin="0,0,15,0"/>

                <Button Content="查询"
                        Command="{Binding SearchCommand}"
                        Style="{StaticResource PrimaryButtonStyle}"
                        Width="80"
                        Height="32"/>
            </StackPanel>
        </Border>

        <!-- Search and Filter Section -->
        <Border Grid.Row="1"
                Background="#F8F9FA"
                BorderBrush="{StaticResource BorderBrush}"
                BorderThickness="1"
                CornerRadius="4"
                Padding="15"
                Margin="0,0,0,15">
            <StackPanel Orientation="Horizontal">
                <!-- Customer Name Filter -->
                <TextBlock Text="客户名称:" VerticalAlignment="Center" Margin="0,0,10,0"/>
                <TextBox Text="{Binding SearchCustomerName, UpdateSourceTrigger=PropertyChanged}"
                         Style="{StaticResource StandardTextBoxStyle}"
                         Width="150"
                         Margin="0,0,15,0"/>

                <!-- Status Filter -->
                <TextBlock Text="订单状态:" VerticalAlignment="Center" Margin="0,0,10,0"/>
                <ComboBox ItemsSource="{Binding StatusOptions}"
                          SelectedItem="{Binding SelectedStatus}"
                          Style="{StaticResource StandardComboBoxStyle}"
                          Width="120"
                          Margin="0,0,15,0"/>

                <!-- Sales Person Filter -->
                <TextBlock Text="销售人员:" VerticalAlignment="Center" Margin="0,0,10,0"/>
                <ComboBox ItemsSource="{Binding SalesPersonOptions}"
                          SelectedValue="{Binding SelectedSalesPersonId}"
                          SelectedValuePath="Id"
                          DisplayMemberPath="Name"
                          Style="{StaticResource StandardComboBoxStyle}"
                          Width="120"/>
            </StackPanel>
        </Border>

        <!-- Action Buttons Section -->
        <StackPanel Grid.Row="2" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Left"
                    Margin="0,0,0,15">
            <Button Content="查询"
                    Command="{Binding SearchCommand}"
                    Style="{StaticResource PrimaryButtonStyle}"
                    Width="80"
                    Height="32"
                    Margin="0,0,10,0"/>
            <Button Content="重置"
                    Command="{Binding ResetFiltersCommand}"
                    Style="{StaticResource SecondaryButtonStyle}"
                    Width="80"
                    Height="32"
                    Margin="0,0,10,0"/>
            <Button Content="新增订单"
                    Command="{Binding AddOrderCommand}"
                    Style="{StaticResource PrimaryButtonStyle}"
                    Width="100"
                    Height="32"
                    Margin="0,0,10,0"/>
            <Button Content="编辑"
                    Command="{Binding EditOrderCommand}"
                    Style="{StaticResource EditButtonStyle}"
                    Width="80"
                    Height="32"
                    Margin="0,0,10,0"/>
            <Button Content="删除"
                    Command="{Binding DeleteOrderCommand}"
                    Style="{StaticResource DeleteButtonStyle}"
                    Width="80"
                    Height="32"
                    Margin="0,0,10,0"/>
            <Button Content="刷新"
                    Command="{Binding RefreshCommand}"
                    Style="{StaticResource SecondaryButtonStyle}"
                    Width="80"
                    Height="32"/>
        </StackPanel>

        <!-- Data Grid Section -->
        <Border Grid.Row="3"
                BorderBrush="{StaticResource BorderBrush}"
                BorderThickness="1"
                CornerRadius="4">
            <DataGrid x:Name="OrdersDataGrid"
                      ItemsSource="{Binding Orders}"
                      SelectedItem="{Binding SelectedOrder}"
                      Style="{StaticResource StandardDataGridStyle}"
                      AutoGenerateColumns="False"
                      CanUserAddRows="False"
                      CanUserDeleteRows="False"
                      IsReadOnly="True"
                      SelectionMode="Single"
                      GridLinesVisibility="Horizontal"
                      HeadersVisibility="Column">

                <DataGrid.Columns>
                    <!-- Row Number -->
                    <DataGridTextColumn Header="序号" Width="60" IsReadOnly="True">
                        <DataGridTextColumn.Binding>
                            <Binding RelativeSource="{RelativeSource AncestorType=DataGridRow}"
                                     Converter="{StaticResource RowIndexConverter}"/>
                        </DataGridTextColumn.Binding>
                    </DataGridTextColumn>

                    <!-- Order Number -->
                    <DataGridTextColumn Header="订单号" Binding="{Binding OrderNumber}" Width="150"/>

                    <!-- Customer Name -->
                    <DataGridTextColumn Header="客户名称" Binding="{Binding CustomerName}" Width="150"/>

                    <!-- Total Amount -->
                    <DataGridTextColumn Header="订单金额" Binding="{Binding FormattedTotalAmount}" Width="120"/>

                    <!-- Effective Date -->
                    <DataGridTextColumn Header="生效日期" Binding="{Binding FormattedEffectiveDate}" Width="100"/>

                    <!-- Expiry Date -->
                    <DataGridTextColumn Header="到期日期" Binding="{Binding FormattedExpiryDate}" Width="100"/>

                    <!-- Created Date -->
                    <DataGridTextColumn Header="签单日期" Binding="{Binding FormattedCreatedAt}" Width="120"/>

                    <!-- Sales Person -->
                    <DataGridTextColumn Header="销售人员" Binding="{Binding SalesPersonName}" Width="100"/>

                    <!-- Status -->
                    <DataGridTextColumn Header="订单状态" Binding="{Binding Status}" Width="100"/>

                    <!-- Action Buttons -->
                    <DataGridTemplateColumn Header="操作" Width="200">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                    <Button Content="编辑"
                                            Command="{Binding DataContext.EditOrderRowCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                            CommandParameter="{Binding}"
                                            Style="{StaticResource EditButtonStyle}"
                                            Width="50"
                                            Height="24"
                                            Margin="2"/>
                                    <Button Content="详情"
                                            Command="{Binding DataContext.ViewOrderDetailsRowCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                            CommandParameter="{Binding}"
                                            Style="{StaticResource SecondaryButtonStyle}"
                                            Width="50"
                                            Height="24"
                                            Margin="2"/>
                                    <Button Content="删除"
                                            Command="{Binding DataContext.DeleteOrderRowCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                            CommandParameter="{Binding}"
                                            Style="{StaticResource DeleteButtonStyle}"
                                            Width="50"
                                            Height="24"
                                            Margin="2"/>
                                </StackPanel>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                </DataGrid.Columns>
            </DataGrid>
        </Border>

        <!-- Summary Section -->
        <Border Grid.Row="4"
                Background="#F8F9FA"
                BorderBrush="{StaticResource BorderBrush}"
                BorderThickness="1,0,1,1"
                CornerRadius="0,0,4,4"
                Padding="15,10"
                Margin="0,0,0,0">
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="合计:" FontWeight="Bold" VerticalAlignment="Center" Margin="0,0,10,0"/>
                <TextBlock Text="{Binding OrderSummary.FormattedTotalAmount}" FontWeight="Bold" VerticalAlignment="Center" Margin="0,0,20,0"/>

                <TextBlock Text="订单数:" FontWeight="Bold" VerticalAlignment="Center" Margin="0,0,10,0"/>
                <TextBlock Text="{Binding OrderSummary.TotalOrders}" FontWeight="Bold" VerticalAlignment="Center"/>
            </StackPanel>
        </Border>

        <!-- Loading Overlay -->
        <Border Grid.RowSpan="5"
                Background="#80000000"
                Visibility="{Binding IsLoading, Converter={StaticResource BooleanToVisibilityConverter}}">
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                <ProgressBar IsIndeterminate="True" Width="200" Height="20" Margin="0,0,0,10"/>
                <TextBlock Text="加载中..." Foreground="White" HorizontalAlignment="Center"/>
            </StackPanel>
        </Border>
    </StackPanel>
</UserControl>
